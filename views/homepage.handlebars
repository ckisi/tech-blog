{{#each posts as |post|}}
  <div class="row">
    <div class="col-md-12 mb-4">
      <div class="card h-100 card-color">
        <div class="card-header bg-brown text-white">
          <div class="d-flex justify-content-between align-items-center">
            <h2 class="card-title mb-0">{{post.title}}</h2>
            <div class="card-subtitle text-muted">
              <p class="text-white">Created by {{user.username}} on {{post.date_created}}</p>
            </div>
          </div>
        </div>
        <div class="card-body">
          <p class="card-text fs-4">{{post.content}}</p>
        </div>
      </div>
    </div>
  </div>
{{/each}}

