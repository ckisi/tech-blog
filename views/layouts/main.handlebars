<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Blog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://code.jquery.com/jquery-3.7.1.min.js"
      integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="./css/style.css" />
  </head>

  <body>
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <a class="navbar-brand navbar-text fs-1 fw-bold" href="/">The Tech Blog</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            {{#if logged_in}}
              <a
                class="nav-link active navbar-text"
                aria-current="page"
                href="/"
              >Home</a>
              <a class="nav-link navbar-text" href="/dashboard">Dashboard</a>
              <button
                class="no-button border-white navbar-text"
                id="logoutBtn"
              >Logout</button>
            {{else}}
              <a
                class="nav-link active navbar-text"
                aria-current="page"
                href="/"
              >Home</a>
              <a class="nav-link navbar-text" href="/login">Dashboard</a>
              <a class="nav-link navbar-text" href="/login">Login</a>
            {{/if}}
          </div>
        </div>
      </div>
    </nav>

    <main>
      <div class="container text-center mt-4">
        {{{body}}}
      </div>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="./js/script.js"></script>
    {{#if logged_in}}
      <script src="./js/logout.js"></script>
    {{/if}}
  </body>
</html>